.posts-expand .post-title::before {
    background: #ff8888 none repeat scroll 0 0;
    content: " ";
    height: 50%;
    left: -10px;
    position: absolute;
    top: 8%;
    transition: background-color 0.2s ease-in-out 0s;
    width: 3px;
}
.posts-expand .post-title {
  font-size: 26px;
  text-align: left;
  font-weight: 400;
  position: relative;
  word-break: break-word;

  +mobile() {
    font-size: 22px;
  }
}
.posts-expand .post-title-link {
  display: inline-block;
  position: relative;
  color: $black-light;
  border-bottom: none;
  line-height: 1.2;
  vertical-align: top;

  &::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: #000;
    visibility: hidden;
    transform: scaleX(0);
    the-transition();
  }

  &:hover::before {
    visibility: visible;
    transform: scaleX(1);
  }

  .fa { font-size: 16px; }
}
